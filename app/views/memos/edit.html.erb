<h3>家計簿の内容を編集する</h3>
<%= form_tag("/memos/" + @memo.id.to_s,:method=>:patch) do%>
    <div class="form-group">
        <%= label_tag "form-title", "Title" %>
        <%= text_field :memos, :title, id:"form-title", class:"form-control", value: @memo.title %>
    </div>
    <div class="form-group">
        <%= label_tag "form-price", "price" %>
        <%= text_field :memos, :price, id:"form-content", class:"form-control", value: @memo.price %>
    </div>
    <div class="form-group">
        <%= label_tag "form-date", "date" %>
        <%= text_field :memos, :date, id:"form-title", class:"form-control", value: @memo.date %>
    </div>
    <%= submit_tag "編集を完了する", class:"btn btn-primary" %>
<% end %>
